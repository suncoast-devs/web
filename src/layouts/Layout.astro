---
import MainNavigation from '../components/MainNavigation.astro';
import Footer from '../components/Footer.astro';

const { title = "Suncoast Developers Guild", description = "We are a collective of software developers, programmers, and designers in the Tampa Bay area." } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="has-navbar-fixed-top">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} @ Suncoast Developers Guild</title>
    <meta name="description" content={description}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" href="/favicon.ico">
    <link rel="stylesheet" href="https://use.typekit.net/rmp3tzf.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.15.4/css/all.css">
    <style is:global>
        :root {
            --sdg-bright-sky: #80ced2;
            --sdg-night-sky: #85577e;
            --sdg-lime: #b1d133;
            --sdg-tangerine: #f99d1b;
            --sdg-sea: #5a9090;
            --sdg-sun: #d5562b;
            --sdg-sand: #f7f0da;
            --sdg-asphalt: #2f3737;
        }

        body {
            font-family: 'source-sans-pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            color: var(--sdg-asphalt);
        }

        h1, h2, h3, h4, h5, h6,
        .title {
            font-family: 'source-serif-pro', Georgia, serif;
        }

        .navbar h1 {
            font-family: 'source-sans-pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        a {
            color: var(--sdg-sea);
        }

        a:hover {
            color: var(--sdg-asphalt);
        }

        .navbar-brand a.navbar-item:hover {
            background-color: transparent;
        }

        .footer {
            background-color: #fafafa;
            padding: 3rem 1.5rem 6rem;
        }

        /* Academy Community Duo split background */
        @media screen and (min-width: 769px) {
            .academy-community-duo {
                background: linear-gradient(
                    98deg,
                    #ffffff 0%,
                    #ffffff 50%,
                    #f5f5f5 50%,
                    #f5f5f5 100%
                );
            }
        }

        @media screen and (max-width: 768px) {
            .academy-community-duo .community {
                background-color: #f5f5f5;
                padding: 2rem;
                margin-top: 2rem;
            }
            .academy-community-duo .academy {
                padding-bottom: 2rem;
            }
        }

        /* Gradient text for titles */
        .academy-community-duo .academy .title a {
            background: linear-gradient(42deg, var(--sdg-sea), var(--sdg-lime));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .academy-community-duo .community .title a {
            background: linear-gradient(42deg, var(--sdg-sun), var(--sdg-tangerine));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .mission-gradient {
            background: linear-gradient(8deg, var(--sdg-night-sky), var(--sdg-bright-sky));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .hero.is-primary {
            background-color: var(--sdg-night-sky);
        }

        .button.is-primary {
            background-color: var(--sdg-night-sky);
            border-color: transparent;
            color: #fff;
        }

        .button.is-primary:hover {
            background-color: #6d4866;
        }

        .navbar-link, .navbar-item {
            color: var(--sdg-asphalt);
        }

        .hero.splash {
            background: linear-gradient(
                rgba(133, 87, 126, 0.75),
                rgba(128, 206, 210, 0.75)
            ),
            url('/splash.svg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center 40%;
        }

        .hero.splash img {
            filter: drop-shadow(0 4px 12px rgba(0,0,0,0.3));
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <MainNavigation />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>