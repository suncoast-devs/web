---
import Layout from '../../layouts/Layout.astro';

const title = "Our Team";
const description = "Meet the team at Suncoast Developers Guild";
---

<Layout title={title} description={description}>
    <section class="hero is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">Our Team</h1>
                <h2 class="subtitle">The people behind SDG</h2>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="notification is-info">
                <p>Our team page is currently being updated. Please check back soon to meet the staff, advisory board, and volunteers who make Suncoast Developers Guild possible.</p>
            </div>
            
            <div class="content">
                <p>Suncoast Developers Guild is led by a dedicated team of staff members, supported by an advisory board of industry professionals and a committed group of volunteers.</p>
            </div>
        </div>
    </section>
</Layout>