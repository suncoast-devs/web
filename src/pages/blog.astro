---
import Layout from '../layouts/Layout.astro';

const title = "Blog";
const description = "News and updates from Suncoast Developers Guild";
---

<Layout title={title} description={description}>
    <section class="hero is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">Blog</h1>
                <h2 class="subtitle">News and updates</h2>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="notification is-info">
                <p>Our blog is currently being updated. Please check back soon for news, announcements, and stories from the Suncoast Developers Guild community.</p>
            </div>
        </div>
    </section>
</Layout>